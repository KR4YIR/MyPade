@model Core_Proje.Areas.Admin.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="profile-container">
    <div class="signup-page">
        <h4 class="signup-title">Edit Profile</h4>
        <form class="signup-form" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="exampleInputName1">Name</label>
                <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Surname</label>
                <input type="text" asp-for="Surname" placeholder="Surname">
            </div>
            <div>
                <label for="exampleInputPassword4">Password</label>
                <input type="password" asp-for="Password" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword4">Confirm Password</label>
                <input type="password" asp-for="PasswordConfirm" class="form-control" id="exampleInputName1" placeholder="Confirm Password">
            </div>
            <div class="form-group">
                <label>Add Picture</label>
                <input type="file" asp-for="Picture">

            </div>

            <button type="submit" class="btn btn-primary mr-2">Update</button>
            <button class="btn btn-light">Cancel</button>
        </form>
    </div>
</div>