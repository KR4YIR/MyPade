@model Core_Proje.Areas.Admin.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@await Html.PartialAsync("~/Views/Default/HeadPartial.cshtml")
<body>
    <partial name="LoginNavBarPartial" />
    <main class="signup-page">
        <h1 class="signup-title">Create Your Account</h1>
        <form method="post" class="signup-form">
            <label>First Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input type="text" asp-for="Name" id="firstname">

            <label for="Surname">Last Name</label>
            <span asp-validation-for="Surname" class="text-danger"></span>
            <input type="text" asp-for="Surname" id="lastname">

            <label for="username">Username</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input type="text" asp-for="UserName" id="username">

            <label for="email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input type="email" asp-for="Email" id="email">

            <label for="password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" id="password">

            <label for="confirmpassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input type="password" asp-for="ConfirmPassword" id="password">
            <div class="text-danger" asp-validation-summary="ModelOnly">
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </main>
    @await Html.PartialAsync("~/Views/Default/FooterPartial.cshtml")
</body>
</html>


