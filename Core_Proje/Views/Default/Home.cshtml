    <style>
        .filter-section {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .filter-label {
            font-weight: bold;
            margin-right: 10px;
        }

        .filter-select,
        .filter-input,
